# Server Configuration
NODE_ENV=development
PORT=5000

# Database - MongoDB Atlas
# Replace <username>, <password>, and <cluster-url> with your actual values
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster-url>/mern-blog?retryWrites=true&w=majority

# Example:
# MONGODB_URI=mongodb+srv://bloguser:mypassword123@cluster0.abc123.mongodb.net/mern-blog?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
JWT_EXPIRE=30d

# File Upload
MAX_FILE_UPLOAD=1000000
FILE_UPLOAD_PATH=./uploads